<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        tools:showIn="@layout/activity_main">

    <TextView
            android:text="address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>

    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="192.168.1.119"
            android:ems="10"
            android:id="@+id/editIP"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/connectedImage"/>

    <Button
            android:text="Connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btIP"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_delete"
            android:id="@+id/connectedImage"
            tools:layout_editor_absoluteY="10dp"
            app:layout_constraintStart_toEndOf="@+id/editIP"
            android:layout_marginStart="8dp"/>

    <Switch
            android:text="Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/light_switch"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editIP"
            android:enabled="false"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/dawnTime"
            app:layout_constraintStart_toStartOf="@+id/textView"/>

    <TextView
            android:text="Dawn time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/light_switch"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/light_switch"/>

    <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/dawnTime"
            android:singleLine="true"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="8dp"
            tools:text="@tools:sample/date/hhmm"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView2"/>

    <TextView
            android:text="Sunset time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/dawnTime"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/dawnTime"/>

    <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/sunsetTime"
            tools:text="@tools:sample/date/hhmm"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp"/>

    <Button
            android:text="apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/applyTimeButton"
            app:layout_constraintBaseline_toBaselineOf="@+id/sunsetTime"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <Button
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateButton"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/dawnTime"
            app:layout_constraintEnd_toEndOf="@+id/applyTimeButton"
            app:layout_constraintHorizontal_bias="0.698"/>

    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/updateButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>